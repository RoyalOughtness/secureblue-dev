[Unit]
Description=Secureblue Firstrun
After=brew-setup.service
Requires=brew-setup.service
ConditionPathExists=!/var/lib/secureblue-firstrun.stamp

[Service]
Type=oneshot
ExecStart=/usr/bin/securebluefirstrun
ExecStartPost=/usr/bin/touch /var/lib/secureblue-firstrun.stamp
User=1000

[Install]
WantedBy=multi-user.target